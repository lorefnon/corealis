- content_for :head do
  = stylesheet_link_tag 'home'
  = stylesheet_link_tag 'https://fonts.googleapis.com/css?family=Raleway:400,900,800'

= semantic_form_for @application_submission do |f|
  = f.semantic_fields_for :applicant do |f|
    = f.input :name
    = f.input :email
    = f.input :phone_number
  = f.input :opening_id, as: :hidden
  = f.input :cover_letter
  = f.submit class: 'btn btn-primary'

