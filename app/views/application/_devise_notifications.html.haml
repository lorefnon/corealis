- flash.each do |name, msg|
  - if msg.is_a?(String)
    .alert.header-alert{role: "alert", class: bs_alert_class(name)}
      %button.close{"data-dismiss" => "alert", :type => "button"}
        %span{"aria-hidden" => "true"} &times;
        %span.sr-only Close
      = content_tag :div, msg, :id => "flash_#{name}"
